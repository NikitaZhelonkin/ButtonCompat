<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="250"
    android:exitFadeDuration="250">

    <item android:state_pressed="true">
        <inset xmlns:android="http://schemas.android.com/apk/res/android"
               android:insetBottom="@dimen/button_compat_inset_vertical_material"
               android:insetLeft="@dimen/button_compat_inset_horizontal_material"
               android:insetRight="@dimen/button_compat_inset_horizontal_material"
               android:insetTop="@dimen/button_compat_inset_vertical_material">
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/button_compat_corner_material"/>
                <solid android:color="@color/colorControlHighlight"/>
            </shape>
        </inset>
    </item>
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>