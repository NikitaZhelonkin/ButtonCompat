<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ru.nikitazhelonkin.sample.MainActivity">

    <ru.nikitazhelonkin.buttoncompat.ButtonCompat
        style="@style/Button"
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ru.nikitazhelonkin.ButtonCompat"
        android:layout_margin="10dp"/>

    <android.support.v7.widget.AppCompatButton
        style="@style/Button"
        android:id="@+id/button_2"
        android:layout_width="match_parent"
        android:text="android.support.AppCompatButton"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <ru.nikitazhelonkin.buttoncompat.ImageButtonCompat
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/image_button_bg"
        android:elevation="4dp"
        app:backgroundTint="@color/colorAccent"
        app:compatElevationRadius="30dp"
        app:compatElevation="4dp"
        tools:targetApi="lollipop"/>

</LinearLayout>
